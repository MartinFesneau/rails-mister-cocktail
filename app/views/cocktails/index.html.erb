<%= render 'layouts/shared/banner' %>
<div class="container justify-content-center">
  <div class="wrapper" id="cocktails-list">
      <% @cocktails.each do |cocktail| %>
        <div class="card" data-aos="fade-up" data-aos-offset="50"
    data-aos-delay="100"
    data-aos-duration="1250"
    data-aos-easing="ease-in-out"
    data-aos-mirror="true"
    data-aos-once="false"
    data-aos-anchor-placement="top-center" style="background-image: url(<%= cl_image_path cocktail.photo.key, height: 300, width: 150, crop: :fill %>)">
          <div>
            <%= link_to cocktail.name, cocktail_path(cocktail.id), class:"card-name" %>
          </div>
        </div>
      <% end %>
  </div>
  <%= link_to "Create a cocktail", new_cocktail_path, class: 'btn btn-flat mb-3' %>
</div> 

